    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "compileOnSave": false,
  "include": [
    "./src",
  ],
  "exclude": [
      "./node_modules"
  ]
}
